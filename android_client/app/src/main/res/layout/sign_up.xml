<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activities.SignUp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/usernameLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/username_input"
            style="@style/TextAppearance.Material3.LabelLarge"
            android:labelFor="@+id/usernameInput"
            />
        <EditText
            android:id="@+id/usernameInput"
            style="@style/form_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="@string/username_input"
            android:inputType="text"
            android:selectAllOnFocus="true"
            android:singleLine="true" />

        <TextView
            android:id="@+id/passwordLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/password_input"
            style="@style/TextAppearance.Material3.LabelLarge"
            android:labelFor="@+id/passwordInput"
            />
        <EditText
            android:id="@+id/passwordInput"
            style="@style/form_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="@string/password_input"
            android:inputType="textPassword"
            android:selectAllOnFocus="true"
            android:singleLine="true" />

        <TextView
            android:id="@+id/vPasswordLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/validate_password_input"
            style="@style/TextAppearance.Material3.LabelLarge"
            android:labelFor="@+id/vPasswordInput"
            />
        <EditText
            android:id="@+id/vPasswordInput"
            style="@style/form_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="@string/validate_password_input"
            android:inputType="textPassword"
            android:selectAllOnFocus="true"
            android:singleLine="true" />

        <TextView
            android:id="@+id/nameLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/name_input"
            style="@style/TextAppearance.Material3.LabelLarge"
            android:labelFor="@+id/nameInput"
            />
        <EditText
            android:id="@+id/nameInput"
            style="@style/form_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="@string/name_input"
            android:inputType="text"
            android:selectAllOnFocus="true"
            android:singleLine="true"/>


        <Button
            android:id="@+id/submit"
            style="@style/input_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submit" />

        <TextView
            android:id="@+id/test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TEST"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>